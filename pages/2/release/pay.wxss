/* pages/2/index/detail.wxss */
page{
  background-color:#f5f5f5;
}
.task-detail{
  margin:30rpx;
}
.task-main{
  box-shadow: 0 0 12rpx 4rpx rgba(95,95,95,0.06);
}
.task-main .title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color:#d9d9d9;
  color:#fff;
  padding:25rpx 30rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  font-size:30rpx;
}
.task-main .title .task-name{
  max-width: 460rpx;
}
.task-content{
  padding:15rpx;

  position:relative;
  background-color: #fff;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.task-content view{
  padding:8rpx 15rpx;
  font-size:30rpx;
  color:#000;
}
.task-content .task-price{
  color:#fb5d15;
  font-weight:bold;
}
.task-content .remark{
  color:#b2b2b2;
}
.time-remain{
  position:absolute;
  right:15rpx;
  top:15rpx;
}
.btn{
  margin-top:16rpx;
  font-size: 34rpx;
  margin-left:auto;
  margin-right:auto;
  padding-left:14px;
  padding-right:14px;
  box-sizing:border-box;
  text-align:center;
  text-decoration:none;
  line-height:2.55555556;
  border-radius:10rpx;
  -webkit-tap-highlight-color:transparent;
  overflow:hidden;
  color:#000000;
  background-color: #fff;
  box-shadow: 0 0 12rpx 4rpx rgba(95,95,95,0.06);
}
.total{
  display: flex;
  justify-content: space-between;
  font-size:30rpx;
}
.total text{
  color:#fb5d15;
}