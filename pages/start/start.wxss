/* pages/start/start.wxss */
page{height: 100%;position: relative;}
.bg_img{display: block;width: 100%;height: 100%;}
view image{width:233rpx;}
.part-time{position:absolute;left: 50%;top: 50%;transform: translate(-110%,-50%);}
.errand{position:absolute;left: 50%;top: 50%;transform: translate(10%,-50%);}
button{background-color:transparent;padding:0;}
.input-box{
  position:absolute;left: 50%;top: 50%;transform: translate(-50%,-50%);
  z-index: 100;
  width:525rpx;
  padding:0 30rpx 30rpx 30rpx;
  background-color:#fff;
  display: flex;
  flex-direction: column;
  align-items: center; 
  overflow: visible;
  border-radius:20rpx;
}

.input-box image{
  width:136rpx;
  height:104rpx;
  transform: translateY(-50%);
}
.input-box input{
  border:1px solid #e0e0e0;
  border-radius:12rpx;
  width:100%;
  padding-left:20rpx;
}
.tip{
  color:#cccccc;
  margin-top:15rpx;
}
.btn{
  width:100%;
  margin-top:16rpx;
  font-size: 34rpx;
  margin-left:auto;
  margin-right:auto;
  padding-left:14px;
  padding-right:14px;
  box-sizing:border-box;
  text-align:center;
  text-decoration:none;
  line-height:2.55555556;
  border-radius:10rpx;
  -webkit-tap-highlight-color:transparent;
  overflow:hidden;
  color:#fff;
  background-color: #ff640a;
  box-shadow: 0 0 12rpx 4rpx rgba(95,95,95,0.06);
}
button::after{
  border:none;
}
button[disabled][type=":default"],wx-button[disabled]:not([type]){
  background-color: transparent;
}
.btn-hover{background-color: transparent;}